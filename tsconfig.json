{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/.source": [
        "./.source/index.ts"
      ],
      "@/*": [
        "./*",
        "toolbox/src/*"
      ],
      "@/stores/*": [
        "components/toolbox/stores/*"
      ],
      "@console-header/*": [
        "components/toolbox/components/console-header/*"
      ],
      "@luxfi/cloud": [
        "./lib/lux-wallet/index.ts"
      ],
      "@luxfi/cloud/chains": [
        "./lib/lux-wallet/chains.ts"
      ],
      "@luxfi/cloud/accounts": [
        "./lib/lux-wallet/accounts.ts"
      ],
      "@luxfi/cloud/methods/pChain": [
        "./lib/lux-wallet/methods/pChain.ts"
      ],
      "@luxfi/cloud/methods/wallet": [
        "./lib/lux-wallet/methods/wallet.ts"
      ],
      "@luxfi/cloud/methods/wallet/pChain": [
        "./lib/lux-wallet/methods/wallet/pChain.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/remote-content.mts",
    "hooks/getLucideIcon.tsz",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
